<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetteingAcivity">


    <include android:id="@+id/settinges_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                android:id="@+id/setting_profile_image"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_status"
                android:layout_below="@+id/setting_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/inputs"
                android:padding="15dp"
                android:hint="Profile Status"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_username"
                android:layout_below="@+id/setting_status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_no_color"
                android:padding="10dp"
                android:hint="Username"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_profile_fullname"
                android:layout_below="@+id/setting_username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_no_color"
                android:padding="10dp"
                android:hint="Full name"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_profile_country"
                android:layout_below="@+id/setting_profile_fullname"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_no_color"
                android:padding="10dp"
                android:hint="Country"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_profile_date"
                android:layout_below="@+id/setting_profile_country"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_no_color"
                android:padding="10dp"
                android:hint="Date of Birth"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_profile_gender"
                android:layout_below="@+id/setting_profile_date"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_no_color"
                android:padding="10dp"
                android:hint="Gender"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setting_profile_relationship"
                android:layout_below="@+id/setting_profile_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_no_color"
                android:padding="10dp"
                android:hint="Relationship Status"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/color_button_blue"
                android:text="Save"
                android:textColor="@android:color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_below="@id/setting_profile_relationship"
                android:id="@+id/setting_profile_button"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textAllCaps="false"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>